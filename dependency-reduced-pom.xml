<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.epam.hubd</groupId>
  <artifactId>recommender</artifactId>
  <version>1.0.0</version>
  <build>
    <sourceDirectory>src/main/scala</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>recommender.MovieLensALS</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.7.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
                <exclude>META-INF/native/**</exclude>
                <exclude>org/**</exclude>
                <exclude>com/google/**</exclude>
                <exclude>com/sun/**</exclude>
                <exclude>com/fasterxml/**</exclude>
                <exclude>com/twitter/**</exclude>
                <exclude>com/github/**</exclude>
                <exclude>com/esotericsoftware/**</exclude>
                <exclude>com/squareup/**</exclude>
                <exclude>com/jcraft/**</exclude>
                <exclude>com/nimbusds/**</exclude>
                <exclude>com/codahale/**</exclude>
                <exclude>com/clearspring/**</exclude>
                <exclude>com/ning/**</exclude>
                <exclude>com/thoughtworks/**</exclude>
                <exclude>com/jamesmurty/**</exclude>
                <exclude>groovy/**</exclude>
                <exclude>shaded/**</exclude>
                <exclude>javax/**</exclude>
                <exclude>groovyjarjarantlr/**</exclude>
                <exclude>groovyjarjarasm/**</exclude>
                <exclude>groovyjarjarcommonscli/**</exclude>
                <exclude>jodd/**</exclude>
                <exclude>javolution/**</exclude>
                <exclude>parquet/**</exclude>
                <exclude>webapps/**</exclude>
                <exclude>mozilla/**</exclude>
                <exclude>jline/**</exclude>
                <exclude>codegen/**</exclude>
                <exclude>io/**</exclude>
                <exclude>okio/**</exclude>
                <exclude>schema/**</exclude>
                <exclude>net/**</exclude>
                <exclude>google/**</exclude>
                <exclude>junit/**</exclude>
                <exclude>about_files/**</exclude>
                <exclude>au/**</exclude>
                <exclude>assets/**</exclude>
                <exclude>javaewah/**</exclude>
                <exclude>images/**</exclude>
                <exclude>templates/**</exclude>
                <exclude>fr/**</exclude>
                <exclude>scala/**</exclude>
                <exclude>jersey/**</exclude>
                <exclude>javassist/**</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <java.version>1.8</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>${java.version}</maven.compiler.target>
  </properties>
</project>

